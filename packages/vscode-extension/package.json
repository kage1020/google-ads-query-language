{
  "name": "gaql-vscode",
  "displayName": "Google Ads Query Language",
  "description": "Language support for Google Ads Query Language (GAQL): validation, autocomplete, IntelliSense, and diagnostics",
  "version": "0.1.3",
  "publisher": "kage1020",
  "author": {
    "name": "kage1020"
  },
  "license": "MIT",
  "homepage": "https://github.com/kage1020/google-ads-query-language#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kage1020/google-ads-query-language.git",
    "directory": "packages/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/kage1020/google-ads-query-language/issues"
  },
  "keywords": [
    "google-ads",
    "gaql",
    "google-ads-query-language",
    "validation",
    "autocomplete",
    "intellisense",
    "diagnostics",
    "language-support",
    "typescript",
    "javascript",
    "google-ads-api",
    "advertising",
    "query-language",
    "code-completion"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Google Ads Query Language",
      "properties": {
        "gaql.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable GAQL validation and autocompletion"
        },
        "gaql.activationMode": {
          "type": "string",
          "enum": [
            "always",
            "onDemand"
          ],
          "default": "onDemand",
          "description": "Default behavior when no comment is present. Comments (@gaql, @gaql-enable, @gaql-disable) always take priority over this setting.",
          "enumDescriptions": [
            "Active by default (when no comment). Can be disabled with @gaql-disable comment.",
            "Inactive by default (when no comment). Can be enabled with @gaql or @gaql-enable comment."
          ]
        },
        "gaql.apiVersion": {
          "type": "string",
          "enum": [
            "19",
            "20",
            "21"
          ],
          "default": "21",
          "description": "Google Ads API version to use for schema and validation",
          "enumDescriptions": [
            "Google Ads API v19 (supported until February 2026)",
            "Google Ads API v20 (supported until June 2026)",
            "Google Ads API v21 (supported until August 2026)"
          ]
        },
        "gaql.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "default": "auto",
          "description": "Language for error messages and UI text",
          "enumDescriptions": [
            "Automatically detect from VS Code language settings",
            "English",
            "Japanese (日本語)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "vite build --config vite.config.build.ts",
    "dev": "vite build --config vite.config.build.ts --watch",
    "clean": "rm -rf out *.tsbuildinfo",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@gaql/core": "workspace:*",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.105.0",
    "@vitest/ui": "^4.0.3",
    "@vscode/vsce": "^3.6.2",
    "happy-dom": "^20.0.8",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4"
  }
}
