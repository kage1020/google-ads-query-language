{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", "**/*.test.ts"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
